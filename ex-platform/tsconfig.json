{
  "compilerOptions": {
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": [
      "es2016",
      "dom",
      "es2017.object"
    ],
    "pretty": true,
    "noUnusedLocals": true,
    "rootDirs": [
      "node_modules",
      "../../node_modules"
    ],
    "typeRoots": [
      "../node_modules/@types",
      "../../node_modules/@types"
    ],
    "types": ["react", "jest"],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["./src/**/*"],

}
